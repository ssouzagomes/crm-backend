// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model permissions {
  id         Int      @id @default(autoincrement())
  flags      Json
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  users      users?
}

model departments {
	id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(30)
  description String?     @db.VarChar(255)
  enabled     Boolean     @default(true)
	teams			 	teams[]
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt

  @@index([name])
}

model teams {
	id          Int         @id @default(autoincrement())
	name        String      @db.VarChar(30)
	description String?     @db.VarChar(255)
	department_id    				Int?
	enabled     Boolean     @default(true)
	users				users[]
	created_at  DateTime    @default(now())
	updated_at  DateTime    @updatedAt
	department      				departments? 						@relation(fields: [department_id], references: [id])

	@@index([name])
	@@index([department_id])
}

model users_sessions {
  id          		Int      @id @default(autoincrement())
  session_key 		String   @db.VarChar(255)
  active      		Boolean
  client_info 		String   @db.VarChar(255)
  user_id     		Int
  ua          		String   @db.VarChar(255)
  ip          		String   @db.VarChar(100)
  device      		String   @db.VarChar(255)
  ip_location 		Json?
  last_location  	Json?
  created_at  		DateTime @default(now())
  last_seen   		DateTime? @default(now())
  updated_at  		DateTime @updatedAt
  user        		users    @relation(fields: [user_id], references: [id])

  @@index([user_id])
  @@index([session_key])
}

model users {
  id              				Int           					@id @default(autoincrement())
  name            				String        					@db.VarChar(100)
  email          				 	String        					@db.VarChar(255)
  password        				String        					@db.VarChar(255)
	pin                   	String?                 @db.VarChar(255)
	permission_id						Int?										@unique
	team_id									Int?
	enabled         				Boolean       					@default(true)
	first_login							Boolean									@default(true)
	created_at      				DateTime      					@default(now())
	updated_at      				DateTime      					@updatedAt
	users_sessions  				users_sessions[]
	permission      				permissions? 						@relation(fields: [permission_id], references: [id])
	team            				teams? 									@relation(fields: [team_id], references: [id])

	@@index([email])
	@@index([name])
}

model verifications {
  id           				Int      @id @default(autoincrement())
  uuid         				String   @db.Char(36)
  token        				String   @db.VarChar(100)
  status       				String   @db.VarChar(30)
  attempts     				Int      @default(0)
  type         				String   @db.VarChar(10)
  value        				String   @db.VarChar(255)
  max_attempts 				Int
  created_at   				DateTime @default(now())
  updated_at   				DateTime @updatedAt

  @@index([token])
  @@index([uuid])
  @@index([type])
}
